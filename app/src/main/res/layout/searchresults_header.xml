<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spicejet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/new_search_results_header_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey"
        android:visibility="gone" />

    <include
        android:id="@+id/no_flights_tv"
        layout="@layout/no_flights_tv_layout"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listview_search_result_flights"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/dp_5" />

</LinearLayout>