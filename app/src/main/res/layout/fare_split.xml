<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spicejet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10" >

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/srcflight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="DELHI"
            android:textColor="@color/app_theme_red"
            android:textSize="@dimen/sp_13"
            spicejet:textStyle="regular" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_itinerary_circle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_srchresults_greyflight" />

        <View
            android:id="@+id/bound_view"
            android:layout_width="@dimen/spiner_height"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/search_header_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/ic_itinerary_circle" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/destflight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HYDERABAD"
            android:textColor="@color/app_theme_red"
            android:textSize="@dimen/sp_13"
            spicejet:textStyle="regular" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/search_header_color"
        android:paddingTop="@dimen/padding_small" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="Adult Fare"
            android:textColor="@color/reg_field_color"
            spicejet:textStyle="light" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/adult_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="4,740.00"
            android:textColor="@color/reg_header_color"
            spicejet:textStyle="regular" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/search_header_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:padding="@dimen/dp_5" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="Meals"
            android:textColor="@color/reg_field_color"
            spicejet:textStyle="light" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/meals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="4,740.00"
            android:textColor="@color/reg_header_color"
            spicejet:textStyle="regular" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:padding="@dimen/dp_5" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="Excess Baggege"
            android:textColor="@color/reg_field_color"
            spicejet:textStyle="light" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/excess_bagage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="4,740.00"
            android:textColor="@color/reg_header_color"
            spicejet:textStyle="regular" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:padding="@dimen/dp_5" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="Bagg Out First"
            android:textColor="@color/reg_field_color"
            spicejet:textStyle="light" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/priority_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="4,740.00"
            android:textColor="@color/reg_header_color"
            spicejet:textStyle="regular" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/search_header_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:padding="@dimen/dp_5" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="Passenger Service Fee"
            android:textColor="@color/reg_field_color"
            spicejet:textStyle="light" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/pass_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="4,740.00"
            android:textColor="@color/reg_header_color"
            spicejet:textStyle="regular" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:padding="@dimen/dp_5" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/light_yellow"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="User Development Fee-Departure(UDF)"
            android:textColor="@color/reg_field_color"
            spicejet:textStyle="light" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/udf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="4,740.00"
            android:textColor="@color/reg_header_color"
            spicejet:textStyle="regular" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:padding="@dimen/dp_5" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="Government Service Tax"
            android:textColor="@color/reg_field_color"
            spicejet:textStyle="light" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/servicetax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="4,740.00"
            android:textColor="@color/reg_header_color"
            spicejet:textStyle="regular" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_register_textheader"
        android:padding="@dimen/dp_5" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="Net Total"
            android:textColor="@color/app_theme_red"
            spicejet:textStyle="light" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/nettotal"
            android:background="@color/app_theme_red" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/nettotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_srchresults_redrupee"
            android:drawablePadding="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="4,740.00"
            android:textColor="@color/app_theme_red"
            spicejet:textStyle="light" />
    </RelativeLayout>

</LinearLayout>