<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/red"

    android:gravity="center"
    android:text="Payment Options"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:weightSum="1">
        <CheckBox
            android:id="@+id/CB_SpiceCLub"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:button="@drawable/custom_radio_selector" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spice Club Membership"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
          />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <CheckBox
            android:id="@+id/CB_CashonPick"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:button="@drawable/custom_radio_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       Cash on pickup        "
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/TV_YoUAreDOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/red"
        android:text="You are done!"/>

</LinearLayout>
