<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spicejet="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tableRow1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:background="@drawable/greyfield"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15" >

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/fieldname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/personaldetails"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            spicejet:textStyle="regular" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_3"
            android:background="@drawable/ic_register_mandatory" />
    </LinearLayout>

    <com.vl.spicejet.components.CustomTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.02" />


        <com.vl.spicejet.components.CustomEditText
            android:id="@+id/fieldvalue_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="0.56"
            android:background="@null"
            android:ellipsize="end"
            android:singleLine="true"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/arrow"
            android:focusableInTouchMode="false"
            android:gravity="left|center_vertical"
            android:onClick="onClick"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/date_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_3"
            android:background="@drawable/arrow"
            android:visibility="gone" />

</LinearLayout>