<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_choose_your_ride"
    tools:context="com.vl.ontheway.ChooseYourRide"
    android:orientation="vertical">
    <com.vl.ontheway.components.CustomTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/toolbar_actionbar"
        android:layout_marginTop="@dimen/dp_5"
        android:text="Departure Time:"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_15" />

    <com.vl.ontheway.components.CustomTextView
        android:id="@+id/depTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="Thu,22 April,2016 7:40 PM"
        android:textColor="@color/black" />

    <com.vl.ontheway.components.CustomTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/depTime"

        android:layout_marginTop="33dp"
        android:text="Your Location:"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_15" />

    <com.vl.ontheway.components.CustomTextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="GachiBowli,Hyderabad"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:padding="5dp">
        <com.vl.ontheway.components.CustomTextView
            android:id="@+id/singlecar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Car"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginRight="2dp"/>

        <com.vl.ontheway.components.CustomTextView
            android:id="@+id/groupCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Car"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="@dimen/dp_15"
            android:background="@color/red"
            android:gravity="center"
            android:padding="5dp"/>
    </LinearLayout>


</LinearLayout>
