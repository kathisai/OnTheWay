<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_upgrade_to_spiceflex_yes_no"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible" >

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/upgrade_to_spiceflex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/navigation_text_color"
        android:textSize="@dimen/sp_17"
        android:visibility="gone"
        app:textStyle="light" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upgrade_to_spiceflex"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:weightSum="2" >

        <com.vl.spicejet.components.CustomButton
            android:id="@+id/btn_yes_spice_flex"
            style="@style/button_medium"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:text="@string/yes"
            app:textStyle="semi-bold" />

        <com.vl.spicejet.components.CustomButton
            android:id="@+id/btn_no_spice_flex"
            style="@style/button_medium"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/no"
            app:textStyle="semi-bold" />
    </LinearLayout>

</RelativeLayout>