<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spicejet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10" >

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/passname_tv"
        android:layout_width="@dimen/padding_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:paddingLeft="@dimen/dp_5"
        android:text="@string/select_passenger"
        android:textColor="@color/searchresults_text"
        android:textSize="@dimen/sp_15"
        spicejet:textStyle="light" />

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/seatname_tv"
        android:layout_width="@dimen/padding_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.1"
        android:paddingLeft="@dimen/dp_5"
        android:textColor="@color/searchresults_text"
        android:textSize="@dimen/sp_15"
        spicejet:textStyle="light" />

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/mealname_tv"
        android:layout_width="@dimen/padding_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.3"
        android:paddingLeft="@dimen/dp_5"
        android:textColor="@color/searchresults_text"
        android:textSize="@dimen/sp_15"
        spicejet:textStyle="light" />

    <CheckBox
        android:id="@+id/passname_chkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:gravity="center_vertical" 
        android:checked="true"/>

</LinearLayout>