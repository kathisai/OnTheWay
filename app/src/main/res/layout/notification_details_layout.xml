<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_15" >

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/notification_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/dp_5"
            android:contentDescription="@string/empty_string"
            android:paddingBottom="@dimen/dp_15"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_5"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/notification_tip" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/push_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/push_box_with_rounded_bg"
            android:minHeight="200dp"
            android:minWidth="200dp"
            android:padding="@dimen/dp_10"
            android:text="test 12"
            android:textColor="@color/navigation_text_color"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

</LinearLayout>