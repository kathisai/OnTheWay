<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spicejet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/flight_schedule_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10" >

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/flight_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_myflights_flightschedule"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/flight_schedule"
            android:textColor="@color/searchresults_text"
            android:textSize="@dimen/sp_13"
            spicejet:textStyle="regular" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_myflights_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/search_header_color" />

    <RelativeLayout
        android:id="@+id/flight_status_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10" >

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/flight_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_myflights_flightstatus"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/flight_status"
            android:textColor="@color/searchresults_text"
            android:textSize="@dimen/sp_13"
            spicejet:textStyle="regular" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_myflights_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/search_header_color" />

    <RelativeLayout
        android:id="@+id/managebooking_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10" >

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/managebooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_myflights_managebooking"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/manage_booking"
            android:textColor="@color/searchresults_text"
            android:textSize="@dimen/sp_13"
            spicejet:textStyle="regular" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_myflights_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/search_header_color" />

</LinearLayout>