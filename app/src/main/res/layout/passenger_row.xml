<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spicejet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_5"
    android:paddingTop="@dimen/dp_5" >

    <ImageView
        android:id="@+id/paxtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10" />

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/user_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:text="@string/select_passenger"
        android:textColor="@color/searchresults_text"
        android:textSize="@dimen/sp_18"
        spicejet:textStyle="light" />

    <LinearLayout
        android:id="@+id/rl_check"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/profile_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:button="@drawable/passenger_checkbox_selector"
            android:clickable="false"
            android:enabled="false" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/app_theme_red"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:src="@drawable/edit"
            android:visibility="visible"
            android:contentDescription="@string/empty_string" />
        
        
        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/app_theme_red"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:src="@drawable/delete"
            android:visibility="gone"
            android:contentDescription="@string/empty_string"
            android:layout_marginLeft="@dimen/dp_5" />
    </LinearLayout>

</LinearLayout>