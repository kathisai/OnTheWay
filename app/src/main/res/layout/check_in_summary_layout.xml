<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/incl_addon_segment"
        layout="@layout/include_addon_segment"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <com.vl.spicejet.components.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/you_have_successfully_checked_in"
                android:textColor="@color/app_theme_red"
                android:textSize="@dimen/sp_16"
                android:id="@+id/check_success_msg_tv" />

            <com.vl.spicejet.components.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:gravity="center"
                android:text="@string/check_in_successful_message"
                android:textColor="@color/navigation_text_color"
                android:textSize="@dimen/sp_15" 
                android:id="@+id/print_email_msg_tv"/>

            <com.vl.spicejet.components.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_header"
                android:padding="@dimen/dp_10"
                android:text="@string/journey_information"
                android:textColor="@color/app_theme_red"
                android:textSize="@dimen/sp_14" />

            <TableLayout
                android:id="@+id/payment_details_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical" >

                <TableRow>

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_5"
                        android:text="@string/flight"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/column"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:id="@+id/tv_flight_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/navigation_text_color" />
                </TableRow>

                <TableRow>

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_5"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/column"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:id="@+id/tv_date_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/navigation_text_color" />
                </TableRow>

                <TableRow>

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_5"
                        android:text="@string/departure"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/column"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:id="@+id/tv_departure_time_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/navigation_text_color" />
                </TableRow>

                <TableRow>

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_5"
                        android:text="@string/arrival"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/column"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:id="@+id/tv_arrival_time_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/navigation_text_color" />
                </TableRow>

                <TableRow>

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_5"
                        android:text="@string/total_pax"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/column"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:id="@+id/tv_travellers_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/navigation_text_color" />
                </TableRow>

                <TableRow>

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_5"
                        android:text="@string/departs"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_5"
                        android:text="@string/column"
                        android:textColor="@color/navigation_text_color" />

                    <com.vl.spicejet.components.CustomTextView
                        android:id="@+id/tv_departs_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/navigation_text_color" />
                </TableRow>
            </TableLayout>

            <com.vl.spicejet.components.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_header"
                android:padding="@dimen/dp_10"
                android:text="@string/checked_passenger_information"
                android:textColor="@color/app_theme_red"
                android:textSize="@dimen/sp_14" />

            <ListView
                android:id="@+id/passengers_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>