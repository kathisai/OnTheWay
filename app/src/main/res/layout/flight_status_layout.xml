<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spicejet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_10" >

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/journey_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="center_horizontal"
        android:text="@string/departure"
        android:textColor="@color/app_theme_red"
        android:textSize="@dimen/sp_14"
        spicejet:textStyle="regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginBottom="@dimen/dp_10" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/scheduled_time"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/column"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />

        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/schedule_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginBottom="@dimen/dp_10" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/estimated_time"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/column"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />


        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/estimated_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginBottom="@dimen/dp_10" >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/actual_time"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/column"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />


        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/actual_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"  >

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/status"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />

        <com.vl.spicejet.components.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/column"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />


        <com.vl.spicejet.components.CustomTextView
            android:id="@+id/status_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/flight_duration_color"
            android:textSize="@dimen/sp_12"
            spicejet:textStyle="regular" />
    </LinearLayout>
    

</LinearLayout>