<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_15" >

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/topbar_bg"
        android:padding="@dimen/dp_10"
        android:text="@string/add_passenger_details"
        android:textColor="@color/app_theme_red"
        android:textSize="@dimen/dp_20" />

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/adult_passengers"
        style="@style/passenger_popup_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/child_passengers"
        style="@style/passenger_popup_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/infant_passengers"
        style="@style/passenger_popup_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>