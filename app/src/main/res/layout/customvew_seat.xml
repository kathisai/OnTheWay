<?xml version="1.0" encoding="utf-8"?>
<com.vl.spicejet.components.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_seat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_ash"
        android:scaleType="fitXY"
        android:src="@drawable/seat_grey" />

    <com.vl.spicejet.components.CustomTextView
        android:id="@+id/tv_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_seat"
        android:layout_alignLeft="@+id/iv_seat"
        android:layout_alignRight="@+id/iv_seat"
        android:layout_alignTop="@+id/iv_seat"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        app:textStyle="regular" />

</com.vl.spicejet.components.CustomRelativeLayout>