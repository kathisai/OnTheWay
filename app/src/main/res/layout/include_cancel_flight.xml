<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spicejet="http://schemas.android.com/apk/res-auto"
    android:id="@+id/departure_LL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/deptCheckBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_10"
        android:button="@drawable/checkbox_selector"
        android:paddingLeft="@dimen/padding_checkbox"
        android:text="@string/please_check_flight"
        android:textSize="@dimen/sp_15"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical" >

            <com.vl.spicejet.components.CustomTextView
                android:id="@+id/journeyDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="Sat,16 May"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                spicejet:textStyle="Regular" />

            <com.vl.spicejet.components.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="From"
                android:textColor="@color/reg_field_color"
                android:textSize="@dimen/sp_15"
                spicejet:textStyle="Regular" />

            <com.vl.spicejet.components.CustomTextView
                android:id="@+id/fromTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="DEL"
                android:textColor="@color/app_theme_red"
                android:textSize="@dimen/sp_18"
                spicejet:textStyle="Regular" />

            <com.vl.spicejet.components.CustomTextView
                android:id="@+id/fromTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:text="5:50 AM"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                spicejet:textStyle="Regular" />
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/oneway_arrow" 
            android:layout_marginTop="@dimen/dp_20"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical" >

            <com.vl.spicejet.components.CustomTextView
                android:id="@+id/flightDetailsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="Flight SG 134"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                spicejet:textStyle="Regular" />

            <com.vl.spicejet.components.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="To"
                android:textColor="@color/reg_field_color"
                android:textSize="@dimen/sp_15"
                spicejet:textStyle="Regular" />

            <com.vl.spicejet.components.CustomTextView
                android:id="@+id/toTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="BOB"
                android:textColor="@color/app_theme_red"
                android:textSize="@dimen/sp_18"
                spicejet:textStyle="Regular" />

            <com.vl.spicejet.components.CustomTextView
                android:id="@+id/toTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="5:50 AM"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                spicejet:textStyle="Regular" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>